/* component/sideslide/sideslide.wxss */

.content {
  width: 750rpx;
  height: 100vh;
  background-color: #1d2220;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  opacity: 0.8;
}

.item image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 40rpx;
}

.item text {
  color: white;
  font-size: 14px;
  margin-left: 40rpx;
  font-weight: 100;
}

.item button {
  background-color: #1d2220;
  color: white;
  font-weight: 100;
  font-size: 14px;
   margin-left: 5rpx;
}

button::after {
  border: none;
}
