/**index.wxss**/

.container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.map-view {
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: white;
}

#lafMap {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.cover-bg {
  width: 750rpx;
  height: 100vh;
  text-align: center;
  line-height: 50px;
  background-color: #1aad19;
  color: #fff;
  opacity: 0.2;
}

.view {
  width: 300rpx;
  height: 300rpx;
  background: black;
  opacity: 1;
}

.cover-view {
  position: absolute;
  width: 100%;
  height: 500px;
  background-color: white;
  display: flex;
  flex-direction: column;
  bottom: -500px;
}

.cover-view .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: flex-start;
  border-bottom: thin solid #ccc;
  color: black;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding: 10rpx 0 10rpx 0;
}

.item .label {
  display: flex;
  width: 140rpx;
  align-items: flex-start;
  font-weight: 100;
  font-size: 14px;
}

.item .content {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-weight: 100;
  font-size: 14px;
  align-content: flex-start;
  width: 500rpx;
}

.cover-image {
  width: 100px;
  height: 100px;
  margin-top: 10px;
  margin-left: 60rpx;
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.4;
}

.modalDlg{
    width: 580rpx;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.modalDlg .mhead{
  margin-top: 30rpx;
}

.modalDlg .mcontent{
  margin-top: 100rpx;
  font-size: 12px;
  font-family: Arial, Helvetica, sans-serif;
  font-weight: 100;
  padding: 10rpx 20rpx 0 20rpx;
}

.btn{
  width: 400rpx;
  height: 80rpx;
  margin-top: 200rpx;
  font-size: 14px;
  background-color: green;
  color: white;
}