/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
  margin-top: 30rpx;
}

.item {
  width: 94%;
  height: 100rpx;
  border-radius: 2rpx;
  box-shadow: 2px 2px 5px 3px #eee;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
  align-items: center;
}

.item text {
  font-family: Arial, Helvetica, sans-serif;
  margin-left: 20rpx;
  font-size: 13px;
}

.item image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
